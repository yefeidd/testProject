<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/register_content_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <include layout="@layout/layout_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/base10dp"
        android:paddingRight="@dimen/base10dp"
        android:paddingBottom="@dimen/base6dp"
        android:paddingTop="@dimen/base6dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/Txt14Black"
            android:text="众和股份"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/Txt12Grey"
            android:text="@string/alert_setting_new_price"/>

        <TextView
            android:id="@+id/tv_up_down"
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/Txt12Grey"
            android:text="@string/alert_setting_updown"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/base10dp"
        android:background="@color/white"
        android:layout_marginTop="@dimen/base6dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/Txt14Black"
            android:text="股价上涨达到"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_up"
                android:layout_width="@dimen/base80dp"
                style="@style/Txt12Grey"
                android:background="@drawable/sp_rect_grey_border"
                android:padding="@dimen/base4dp"/>

            <TextView
                style="@style/Txt14Black"
                android:layout_marginLeft="@dimen/base10dp"
                android:text="元"/>

        </LinearLayout>

        <CheckBox
            android:id="@+id/cb_alert1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox_push"
            android:background="@android:color/transparent"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/base10dp"
        android:paddingRight="@dimen/base10dp"
        android:paddingBottom="@dimen/base10dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/Txt14Black"
            android:text="股价下跌达到"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_down"
                android:layout_width="@dimen/base80dp"
                style="@style/Txt12Grey"
                android:background="@drawable/sp_rect_grey_border"
                android:padding="@dimen/base4dp"/>

            <TextView
                style="@style/Txt14Black"
                android:layout_marginLeft="@dimen/base10dp"
                android:text="元"/>

        </LinearLayout>

        <CheckBox
            android:id="@+id/cb_alert2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox_push"
            android:background="@android:color/transparent"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/base10dp"
        android:background="@color/white"
        android:layout_marginTop="@dimen/base6dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/Txt14Black"
            android:text="日涨幅达到 +"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_day_up"
                android:layout_width="@dimen/base80dp"
                style="@style/Txt12Grey"
                android:background="@drawable/sp_rect_grey_border"
                android:padding="@dimen/base4dp"/>

            <TextView
                style="@style/Txt14Black"
                android:layout_marginLeft="@dimen/base10dp"
                android:text="%"/>

        </LinearLayout>

        <CheckBox
            android:id="@+id/cb_alert3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox_push"
            android:background="@android:color/transparent"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/base10dp"
        android:paddingRight="@dimen/base10dp"
        android:paddingBottom="@dimen/base10dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/Txt14Black"
            android:text="日跌幅达到 -"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_day_down"
                android:layout_width="@dimen/base80dp"
                style="@style/Txt12Grey"
                android:background="@drawable/sp_rect_grey_border"
                android:padding="@dimen/base4dp"/>

            <TextView
                style="@style/Txt14Black"
                android:layout_marginLeft="@dimen/base10dp"
                android:text="%"/>

        </LinearLayout>

        <CheckBox
            android:id="@+id/cb_alert4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox_push"
            android:background="@android:color/transparent"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/base10dp"
        android:layout_marginTop="@dimen/base6dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/Txt14Black"
            android:text="智能量化预警"/>

        <CheckBox
            android:id="@+id/cb_alert5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox_push"
            android:background="@android:color/transparent"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/base10dp"
        android:paddingRight="@dimen/base10dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/Txt14Black"
            android:text="股价下跌达到"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_down_to"
                android:layout_width="@dimen/base80dp"
                style="@style/Txt12Grey"
                android:background="@drawable/sp_rect_grey_border"
                android:padding="@dimen/base4dp"/>

            <TextView
                style="@style/Txt14Black"
                android:layout_marginLeft="@dimen/base10dp"
                android:text="元"/>

        </LinearLayout>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox_push"
            android:background="@android:color/transparent"
            android:visibility="invisible"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        style="@style/Txt12Black"
        android:padding="@dimen/base10dp"
        android:text="@string/alert_setting_intru"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/base10dp"
        android:layout_marginTop="@dimen/base6dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/Txt14Black"
            android:text="公告预警"/>

        <CheckBox
            android:id="@+id/cb_alert6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox_push"
            android:background="@android:color/transparent"
            />
    </LinearLayout>
</LinearLayout>