<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/base8dp"
        android:layout_marginLeft="@dimen/base12dp"
        android:layout_marginRight="@dimen/base12dp"
        android:layout_marginTop="@dimen/base8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            style="@style/Txt16Black"
            android:layout_width="0dp"
            android:layout_weight="1.5" />

        <TextView
            android:id="@+id/tv_last_price"
            style="@style/Txt14AppColor"
            android:layout_width="0dp"
            android:layout_weight="2" />

        <TextView
            android:id="@+id/tv_chg"
            style="@style/Txt14AppColor"
            android:layout_width="0dp"
            android:layout_weight="1.5" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/base12dp"
        android:layout_marginRight="@dimen/base12dp"
        android:background="@color/grey_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base12dp"
        android:layout_marginRight="@dimen/base12dp"
        android:layout_marginTop="@dimen/base8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_title_pl"
            style="@style/Txt14Grey"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="盈       亏" />

        <TextView
            android:id="@+id/tv_pl"
            style="@style/Txt14AppColor"
            android:layout_width="0dp"
            android:layout_weight="1.5" />

        <TextView
            style="@style/Txt14Grey"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="收       益" />

        <TextView
            android:id="@+id/tv_gains"
            style="@style/Txt14AppColor"
            android:layout_width="0dp"
            android:layout_weight="1.5" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base12dp"
        android:layout_marginRight="@dimen/base12dp"
        android:layout_marginTop="@dimen/base8dp"
        android:orientation="horizontal">

        <TextView
            style="@style/Txt14Grey"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:text="@string/accumulate_buy_in_amount" />

        <TextView
            android:id="@+id/tv_buy_in_amount"
            style="@style/Txt14Black"
            android:layout_width="0dp"
            android:layout_weight="0.8" />

        <TextView
            style="@style/Txt14Grey"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:text="@string/accumulate_sell_out_amount" />

        <TextView
            android:id="@+id/tv_sell_out_amount"
            style="@style/Txt14Black"
            android:layout_width="0dp"
            android:layout_weight="0.8" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base12dp"
        android:layout_marginRight="@dimen/base12dp"
        android:layout_marginTop="@dimen/base8dp"
        android:orientation="horizontal">

        <TextView
            style="@style/Txt14Grey"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/cost_per_share" />

        <TextView
            android:id="@+id/tv_cost_per_share"
            style="@style/Txt14Black"
            android:layout_width="0dp"
            android:layout_weight="1.5" />

        <TextView
            style="@style/Txt14Grey"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/floating_pl" />

        <TextView
            android:id="@+id/tv_floating_pl"
            style="@style/Txt14Black"
            android:layout_width="0dp"
            android:layout_weight="1.5" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base12dp"
        android:layout_marginRight="@dimen/base12dp"
        android:layout_marginTop="@dimen/base8dp"
        android:orientation="horizontal">

        <TextView
            style="@style/Txt14Grey"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/position_num" />

        <TextView
            android:id="@+id/tv_position_num"
            style="@style/Txt14Black"
            android:layout_width="0dp"
            android:layout_weight="1.5" />

        <TextView
            style="@style/Txt14Grey"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/sell_num" />

        <TextView
            android:id="@+id/tv_sell_num"
            style="@style/Txt14Black"
            android:layout_width="0dp"
            android:layout_weight="1.5" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base12dp"
        android:layout_marginRight="@dimen/base12dp"
        android:layout_marginTop="@dimen/base8dp"
        android:orientation="horizontal">

        <TextView
            style="@style/Txt14Grey"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="仓       位" />

        <TextView
            android:id="@+id/tv_position"
            style="@style/Txt14Black"
            android:layout_width="0dp"
            android:layout_weight="1.5" />

        <TextView
            style="@style/Txt14Grey"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/jian_cang_time" />

        <TextView
            android:id="@+id/tv_time"
            style="@style/Txt14Black"
            android:layout_width="0dp"
            android:layout_weight="1.5" />

    </LinearLayout>

    <TextView
        style="@style/Txt15Black"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/base8dp"
        android:background="@color/register_content_color"
        android:paddingBottom="@dimen/base8dp"
        android:paddingLeft="@dimen/base12dp"
        android:paddingTop="@dimen/base8dp"
        android:text="持仓相关买卖记录" />

</LinearLayout>