<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/base50dp"
    android:orientation="vertical"
    android:paddingTop="@dimen/base8dp">

    <TextView
        android:id="@+id/tv_question"
        style="@style/Txt14Black"
        android:layout_width="match_parent"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="@dimen/base10dp"
        android:paddingRight="@dimen/base10dp"
        android:text="广东甘化（000576）后市好看吗？还有上升的空间吗？" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/base10dp"
        android:paddingRight="@dimen/base10dp"
        android:paddingBottom="@dimen/base4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            style="@style/Txt12Grey"
            android:text="天天轮毂" />

        <TextView
            android:id="@+id/tv_time"
            style="@style/Txt12Grey"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/base10dp"
            android:layout_weight="1"
            android:text="11-15 10:50" />

        <TextView
            style="@style/Txt12AppColor"
            android:text="@string/responsing" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_line"/>
</LinearLayout>