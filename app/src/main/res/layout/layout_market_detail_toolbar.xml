<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_bar_color">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base50dp">


        <ImageView
            android:id="@+id/iv_leftmenu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:paddingLeft="@dimen/base5dp"
            android:paddingRight="@dimen/activity_large_margin"
            android:src="@drawable/register_back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/toolbar_title"
                style="@style/Txt18White"
                android:layout_gravity="center_horizontal"
                android:text="恒生指数" />

            <TextView
                android:id="@+id/tv_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易中 05-06 09:54"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>


        <ImageButton
            android:id="@+id/ib_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ib_history"
            android:background="@null"
            android:paddingLeft="@dimen/base10dp"
            android:paddingRight="@dimen/base20dp"
            android:src="@drawable/article_share"
            android:visibility="visible" />

    </RelativeLayout>

</android.support.v7.widget.Toolbar>
