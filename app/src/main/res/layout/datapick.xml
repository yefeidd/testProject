<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dip"
        android:background="#00000000"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_bg_top_normal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/base5dp"
                android:layout_marginLeft="@dimen/base5dp"
                android:layout_marginTop="@dimen/base10dp"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="年"
                android:textStyle="bold" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/base10dp"
                android:layout_marginTop="@dimen/base10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="月"
                android:textStyle="bold" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/base10dp"
                android:layout_marginRight="@dimen/base5dp"
                android:layout_marginTop="@dimen/base10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="日"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_bg_top_normal"
            android:orientation="horizontal">

            <cn.zn.com.zn_android.uiclass.customerview.widget.WheelView
                android:id="@+id/year"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/base10dp"
                android:layout_marginLeft="@dimen/base5dp"
                android:layout_marginTop="@dimen/base10dp"
                android:layout_weight="0.8" />

            <cn.zn.com.zn_android.uiclass.customerview.widget.WheelView
                android:id="@+id/month"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/base10dp"
                android:layout_marginTop="@dimen/base10dp"
                android:layout_weight="1" />

            <cn.zn.com.zn_android.uiclass.customerview.widget.WheelView
                android:id="@+id/day"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/base10dp"
                android:layout_marginRight="@dimen/base5dp"
                android:layout_marginTop="@dimen/base10dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/base45dp"
            android:background="@drawable/dialog_bg_bottom_normal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/set"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/dialog_btn_left_selector"
                android:text="确定"
                android:textColor="#1298FF" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.01"
                android:background="#E9E2DD" />

            <Button
                android:id="@+id/cancel"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/dialog_btn_right_selector"
                android:text="取消"
                android:textColor="#5C5D5C" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>