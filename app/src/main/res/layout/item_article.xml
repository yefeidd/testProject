<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/item_padding_bottom"
    android:paddingLeft="@dimen/item_padding_left"
    android:paddingRight="@dimen/item_padding_right"
    android:paddingTop="@dimen/item_padding_top">

    <TextView
        android:id="@+id/tv_title"
        style="@style/Txt14Black"
        android:lines="1"
        android:paddingBottom="@dimen/base5dp"
        android:text="股票-专家在线点评" />

    <TextView
        android:id="@+id/tv_content"
        style="@style/Txt13Grey"
        android:lines="2"
        android:paddingBottom="@dimen/base3dp"
        android:text="gsdahifhsdafksadhfkasdhfjsdafjlsadjflsajdlfjsldajflfjasdljflsadlfjsdalfjlasjdfl......"
        android:lineSpacingMultiplier="1.1"
        />

    <RelativeLayout
        android:id="@+id/rl_praise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_praise"
            style="@style/Txt12Grey"
            android:text="阅 (3928)" />

        <TextView
            android:id="@+id/tv_like"
            style="@style/Txt12Grey"
            android:layout_marginLeft="@dimen/base10dp"
            android:layout_toRightOf="@id/tv_praise"
            android:text="点赞 (23928)" />

        <TextView
            android:id="@+id/tv_times"
            style="@style/Txt12Grey"
            android:layout_alignParentRight="true"
            android:text="2012-03-16" />
    </RelativeLayout>

</LinearLayout>