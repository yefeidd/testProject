<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/base10dp"
    android:paddingBottom="@dimen/base10dp"
    android:paddingLeft="@dimen/base16dp"
    android:paddingRight="@dimen/base12dp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_industry_name"
        android:layout_width="0dp"
        android:layout_weight="1.5"
        style="@style/Txt15Black"
        android:text="网络游戏"
        android:paddingTop="@dimen/base4dp"
        android:paddingBottom="@dimen/base4dp"
        />

    <TextView
        android:id="@+id/tv_up_down"
        android:layout_width="0dp"
        android:layout_weight="1.2"
        android:gravity="center"
        style="@style/Txt18AppColor"
        android:text="+1.84%"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        style="@style/Txt15Black"
        android:text="天音控股"/>
</LinearLayout>