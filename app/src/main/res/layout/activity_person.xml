<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/register_content_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />

    <RelativeLayout
        android:id="@+id/rl_avatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/base16dp">

        <TextView
            style="@style/Txt14Black"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/person_avatar" />

        <ImageView
            android:id="@+id/iv_avatar_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@mipmap/ic_arrow_r_grey" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_avatar"
            android:layout_width="@dimen/base30dp"
            android:layout_height="@dimen/base30dp"
            android:layout_marginRight="@dimen/base8dp"
            android:layout_toLeftOf="@+id/iv_avatar_right"
            android:scaleType="centerCrop"
            app:fadeDuration="200"
            app:placeholderImage="@mipmap/ic_default_avatars"
            app:roundAsCircle="true" />
    </RelativeLayout>

    <View style="@style/LineH0_5Grey" />

    <View
        style="@style/LineH0_5Grey"
        android:layout_marginTop="@dimen/base8dp" />

    <RelativeLayout
        android:id="@+id/rl_nick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/base16dp">

        <TextView
            style="@style/Txt14Black"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/person_nick" />

        <ImageView
            android:id="@+id/iv_nick_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@mipmap/ic_arrow_r_grey" />

        <TextView
            android:id="@+id/tv_nick"
            style="@style/Txt14Grey"
            android:layout_marginRight="@dimen/base8dp"
            android:layout_toLeftOf="@+id/iv_nick_right"
             />
    </RelativeLayout>

    <View style="@style/LineH0_5Grey" />

    <RelativeLayout
        android:id="@+id/rl_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/base16dp">

        <TextView
            style="@style/Txt14Black"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/person_sex" />

        <ImageView
            android:id="@+id/iv_sex_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@mipmap/ic_arrow_r_grey" />

        <TextView
            android:id="@+id/tv_sex"
            style="@style/Txt14Grey"
            android:layout_marginRight="@dimen/base8dp"
            android:layout_toLeftOf="@+id/iv_sex_right"
             />
    </RelativeLayout>

    <View style="@style/LineH0_5Grey" />

    <RelativeLayout
        android:id="@+id/rl_birth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/base16dp">

        <TextView
            style="@style/Txt14Black"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/person_birth" />

        <ImageView
            android:id="@+id/iv_birth_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@mipmap/ic_arrow_r_grey" />

        <TextView
            android:id="@+id/tv_birth"
            style="@style/Txt14Grey"
            android:layout_marginRight="@dimen/base8dp"
            android:layout_toLeftOf="@+id/iv_birth_right"
             />
    </RelativeLayout>

    <View style="@style/LineH0_5Grey" />

    <RelativeLayout
        android:id="@+id/rl_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/base16dp">

        <TextView
            style="@style/Txt14Black"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/person_location" />

        <ImageView
            android:id="@+id/iv_location_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@mipmap/ic_arrow_r_grey" />

        <TextView
            android:id="@+id/tv_location"
            style="@style/Txt14Grey"
            android:layout_marginRight="@dimen/base8dp"
            android:layout_toLeftOf="@+id/iv_location_right"
             />
    </RelativeLayout>

    <View style="@style/LineH0_5Grey" />

    <View
        style="@style/LineH0_5Grey"
        android:layout_marginTop="@dimen/base8dp" />

    <RelativeLayout
        android:id="@+id/rl_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/base16dp">

        <TextView
            style="@style/Txt14Black"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/phone_num" />

        <TextView
            android:id="@+id/tv_phone"
            style="@style/Txt14Grey"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
             />
    </RelativeLayout>

    <View style="@style/LineH0_5Grey" />

    <RelativeLayout
        android:id="@+id/rl_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/base16dp">

        <TextView
            style="@style/Txt14Black"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/person_pw" />

        <ImageView
            android:id="@+id/iv_pw_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@mipmap/ic_arrow_r_grey" />

        <TextView
            android:id="@+id/tv_pw"
            style="@style/Txt14Grey"
            android:layout_marginRight="@dimen/base8dp"
            android:layout_toLeftOf="@+id/iv_pw_right"
            android:text="@string/modify" />
    </RelativeLayout>

    <View style="@style/LineH0_5Grey" />

    <View
        style="@style/LineH0_5Grey"
        android:layout_marginTop="@dimen/base8dp" />

    <RelativeLayout
        android:id="@+id/rl_signature"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            style="@style/Txt14Black"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="@dimen/base16dp"
            android:text="@string/person_signature" />

        <ImageView
            android:id="@+id/iv_signature_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:paddingBottom="@dimen/base16dp"
            android:paddingRight="@dimen/base16dp"
            android:paddingTop="@dimen/base16dp"
            android:src="@mipmap/ic_arrow_r_grey" />

        <TextView
            android:id="@+id/tv_signature"
            style="@style/Txt14Grey"
            android:layout_marginRight="@dimen/base8dp"
            android:layout_toLeftOf="@+id/iv_signature_right"
            android:paddingBottom="@dimen/base16dp"
            android:paddingTop="@dimen/base16dp"
            android:text="@string/modify" />

        <View
            style="@style/LineH0_5Grey"
            android:layout_below="@+id/iv_signature_right" />
    </RelativeLayout>
</LinearLayout>
