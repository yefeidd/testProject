<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingLeft="@dimen/base12dp"
    android:paddingRight="@dimen/base12dp"
    android:paddingTop="@dimen/base8dp"
    android:paddingBottom="@dimen/base8dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time"
            style="@style/Txt14Black"
            android:drawablePadding="@dimen/base8dp"
            android:drawableRight="@mipmap/icon_buy_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_trade_type"
            style="@style/Txt13Grey"
            android:visibility="gone"
            android:text="@string/had_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/base4dp"
        >

        <TextView
            style="@style/Txt14Grey"
            android:layout_weight="1.1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="top"
            android:text="@string/entrust_price"/>

        <TextView
            android:id="@+id/tv_deal_price"
            style="@style/Txt14Black"
            android:layout_weight="1.8"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/base4dp"
            android:text="@string/entrust_price"
            android:gravity="left"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/Txt14Grey"
            android:layout_weight="1.1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="top"
            android:text="@string/entrust_num"/>

        <TextView
            android:id="@+id/tv_deal_num"
            style="@style/Txt14Black"
            android:layout_weight="1.4"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/base4dp"
            android:text="@string/entrust_num"
            android:gravity="left"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/base4dp"
        >

        <TextView
            style="@style/Txt14Grey"
            android:layout_weight="1.1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="top"
            android:text="@string/entrust_time"/>

        <TextView
            android:id="@+id/tv_deal_amount"
            style="@style/Txt14Black"
            android:layout_weight="1.8"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/base4dp"
            android:text="10-20 11.20"
            android:gravity="left"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/Txt14Grey"
            android:layout_weight="1.1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="top"
            android:text="@string/entrust_frozen_money"/>

        <TextView
            android:id="@+id/tv_exchange_fee"
            style="@style/Txt14Black"
            android:layout_weight="1.4"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/base4dp"
            android:text="999999999"
            android:gravity="left"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_cancel_trade"
        style="@style/Txt13Grey"
        android:text="@string/cancel_trade"
        android:layout_marginTop="@dimen/base8dp"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="@dimen/base30dp"
        android:paddingRight="@dimen/base30dp"
        android:paddingTop="@dimen/base4dp"
        android:paddingBottom="@dimen/base4dp"
        android:background="@drawable/sp_rect_grey_border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>