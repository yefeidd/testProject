<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:baselineAligned="false">

    <include layout="@layout/layout_market_detail_head"/>

    <RadioGroup
        android:id="@+id/rg_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/base8dp"
        android:layout_marginLeft="@dimen/base8dp"
        android:layout_marginRight="@dimen/base8dp"
        android:layout_marginStart="@dimen/base8dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_news"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_chart_select"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="@dimen/base10dp"
            android:paddingTop="@dimen/base10dp"
            android:checked="true"
            android:text="@string/chart_news"
            android:textColor="@color/market_tittle_gray_color"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/rb_announce"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_chart_select"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="@dimen/base10dp"
            android:paddingTop="@dimen/base10dp"
            android:text="@string/chart_announcement"
            android:textColor="@color/market_tittle_gray_color"
            android:textSize="14sp" />

    </RadioGroup>

    <cn.zn.com.zn_android.uiclass.ScrollListView
        android:id="@+id/slv_news"
        android:dividerHeight="0.5dp"
        android:divider="@color/register_content_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_click"
        android:layout_width="match_parent"
        style="@style/Txt14Grey"
        android:gravity="center"
        android:clickable="true"
        android:layout_marginBottom="@dimen/base4dp"
        android:background="@drawable/border_top_line"
        android:text="@string/click_more"
        android:padding="@dimen/base8dp"/>

    <RadioGroup
        android:id="@+id/rg_simple_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/base8dp"
        android:layout_marginLeft="@dimen/base8dp"
        android:layout_marginRight="@dimen/base8dp"
        android:layout_marginStart="@dimen/base8dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_brief"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_chart_select"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="@dimen/base10dp"
            android:paddingTop="@dimen/base10dp"
            android:text="@string/simple_Status"
            android:checked="true"
            android:textColor="@color/market_tittle_gray_color"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/rb_finance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_chart_select"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="@dimen/base10dp"
            android:paddingTop="@dimen/base10dp"
            android:text="@string/finance"
            android:textColor="@color/market_tittle_gray_color"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/rb_shareholders"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_chart_select"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="@dimen/base10dp"
            android:paddingTop="@dimen/base10dp"
            android:text="@string/shareholder"
            android:textColor="@color/market_tittle_gray_color"
            android:textSize="14sp" />

    </RadioGroup>

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/base8dp"
        android:layout_marginLeft="@dimen/base8dp"
        android:layout_marginRight="@dimen/base8dp"
        android:layout_marginStart="@dimen/base8dp"/>

</LinearLayout>