<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/base37dp"
    android:background="@color/bg_maket_footer"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_add_self_stock"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="+自选"
        android:textColor="@color/font_value_black"
        android:textSize="14sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/base5dp"
        android:layout_marginTop="@dimen/base5dp"
        android:background="#E5E5E5" />

    <TextView
        android:id="@+id/tv_buy_in"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/buy_in"
        android:textColor="@color/font_value_black"
        android:textSize="14sp" />
</LinearLayout>