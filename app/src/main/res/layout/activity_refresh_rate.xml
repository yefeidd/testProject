<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/register_content_color"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/layout_toolbar"/>

        <TextView
            style="@style/Txt14Black"
            android:layout_width="match_parent"
            android:padding="@dimen/base10dp"
            android:text="@string/data_traffic" />

        <cn.zn.com.zn_android.uiclass.ScrollListView
            android:id="@+id/ll_data_traffic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:divider="@color/register_content_color"
            android:dividerHeight="0.5dp" />

        <TextView
            style="@style/Txt14Black"
            android:layout_width="match_parent"
            android:padding="@dimen/base10dp"
            android:text="@string/wifi" />

        <cn.zn.com.zn_android.uiclass.ScrollListView
            android:id="@+id/ll_wifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:divider="@color/register_content_color"
            android:dividerHeight="0.5dp" />

        <TextView
            android:layout_width="match_parent"
            style="@style/Txt13Grey"
            android:text="@string/refresh_tips"
            android:padding="@dimen/base10dp"/>

    </LinearLayout>
</ScrollView>
