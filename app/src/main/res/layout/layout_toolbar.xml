<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_bar_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base50dp">

        <TextView
            android:id="@+id/tv_leftMenu"
            style="@style/Txt16White"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/base5dp"
            android:paddingRight="@dimen/activity_large_margin"
            android:text="编辑"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_leftmenu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:paddingLeft="@dimen/base5dp"
            android:paddingRight="@dimen/activity_large_margin"
            android:src="@drawable/register_back" />

        <TextView
            android:id="@+id/toolbar_title"
            style="@style/Txt16White"
            android:layout_centerInParent="true" />

        <ImageButton
            android:id="@+id/ib_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:paddingLeft="@dimen/base10dp"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/ib_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ib_history"
            android:background="@null"
            android:paddingLeft="@dimen/base10dp"
            android:paddingRight="@dimen/base20dp"
            android:src="@drawable/iv_search"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_save"
            style="@style/Txt14White"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/base12dp"
            android:paddingLeft="@dimen/base12dp"
            android:paddingRight="@dimen/base20dp"
            android:paddingTop="@dimen/base12dp"
            android:text="@string/save"
            android:visibility="gone" />
    </RelativeLayout>

</android.support.v7.widget.Toolbar>
