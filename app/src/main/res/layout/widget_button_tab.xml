<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/tab_btn_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:paddingTop="@dimen/activity_mini_margin"
    android:paddingBottom="@dimen/activity_mini_margin"
    android:background="@color/app_bar_color"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/tab_img"
        android:layout_width="@dimen/base25dp"
        android:layout_height="@dimen/base25dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tab_btn_title"
        style="@style/Txt12White"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/tab_img"
        android:text="@string/home"
         />
</LinearLayout>
