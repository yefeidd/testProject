<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/base8dp"
        android:paddingBottom="@dimen/base8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_start"
            style="@style/Txt14Grey"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:lineSpacingMultiplier="1.3"
             />

        <TextView
            android:id="@+id/tv_end"
            style="@style/Txt14Grey"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:lineSpacingMultiplier="1.3"
             />

    </LinearLayout>

    <TextView
        style="@style/Txt14Black"
        android:layout_width="match_parent"
        android:background="@color/grey_light"
        android:paddingBottom="@dimen/base5dp"
        android:paddingLeft="@dimen/base12dp"
        android:paddingTop="@dimen/base5dp"
        android:text="@string/histoty_records" />
</LinearLayout>