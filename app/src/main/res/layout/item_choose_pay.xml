<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/base20dp"
    android:paddingRight="@dimen/base20dp"
    android:paddingTop="@dimen/base16dp"
    android:paddingBottom="@dimen/base16dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="@dimen/base35dp"
        android:layout_height="@dimen/base35dp" />
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/base8dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            style="@style/Txt14Black" />
        
        <TextView
            android:id="@+id/tv_info"
            android:layout_width="match_parent"
            style="@style/Txt12Grey"
            />
    </LinearLayout>
    
    <ImageView
        android:id="@+id/iv_select"
        android:layout_width="@dimen/base16dp"
        android:layout_height="@dimen/base16dp" />
</LinearLayout>