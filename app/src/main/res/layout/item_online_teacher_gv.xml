<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/sp_rect_grey_border"
    android:gravity="center"
    android:paddingTop="@dimen/base12dp"
    android:paddingLeft="@dimen/base18dp"
    android:paddingBottom="@dimen/base15dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@id/sdv_avatar"
                android:layout_width="@dimen/base42dp"
                android:layout_height="@dimen/base42dp"
                app:actualImageScaleType="focusCrop"
                app:placeholderImage="@mipmap/ic_default_avatars"
                app:roundAsCircle="false"
                app:roundedCornerRadius="@dimen/base4dp" />

            <ImageView
                android:id="@+id/iv_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/base4dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base6dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                style="@style/Txt14Black"
                android:text="股圣老周"/>

            <TextView
                android:layout_width="match_parent"
                style="@style/Txt13MarketGrey"
                android:text="投资达人"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_answer_num"
        android:layout_width="match_parent"
        style="@style/Txt13MarketGrey"
        android:layout_marginTop="@dimen/base6dp"
        android:text="@string/answer_num"/>

    <ImageButton
        android:id="@+id/ib_ask_him"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base6dp"
        android:background="@mipmap/ic_ask_him"/>
</LinearLayout>