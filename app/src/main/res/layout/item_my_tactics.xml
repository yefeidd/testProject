<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingLeft="@dimen/base16dp"
    android:paddingRight="@dimen/base16dp"
    android:paddingTop="@dimen/base10dp"
    android:paddingBottom="@dimen/base10dp"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="@dimen/base45dp"
        android:layout_height="@dimen/base45dp"
        android:src="@mipmap/ic_tactics"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            style="@style/Txt14Black"
            />

        <TextView
            android:id="@+id/tv_teacher"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/base6dp"
            style="@style/Txt13Grey" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:gravity="right"
            style="@style/Txt12Grey" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_buy"
        style="@style/Txt12White"
        android:background="@drawable/sp_rect_orange"
        android:paddingLeft="@dimen/base12dp"
        android:paddingRight="@dimen/base12dp"
        android:paddingTop="@dimen/base4dp"
        android:paddingBottom="@dimen/base4dp"
        android:layout_marginLeft="8dp"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        android:text="@string/buy"/>
</LinearLayout>