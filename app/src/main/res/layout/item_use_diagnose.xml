<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/base12dp"
        android:layout_marginLeft="@dimen/base12dp"
        android:layout_marginRight="@dimen/base12dp"
        android:background="@drawable/bg_dianose"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_value"
            style="@style/Txt30AppColor"
            android:text="2"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/Txt16AppColor"
            android:layout_marginLeft="@dimen/base10dp"
            android:text="证牛币诊股券"/>

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/cb_use_znb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base8dp"
            android:background="@android:color/transparent"
            android:button="@drawable/order_znb_checked"/>

        <TextView
            android:id="@+id/tv_num"
            style="@style/Txt18AppColor"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/base8dp"/>

    </LinearLayout>

    <View
        android:id="@+id/v_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base12dp"
        android:background="@color/register_content_color"/>

</LinearLayout>