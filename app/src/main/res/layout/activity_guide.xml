<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange_dd3d20">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_guide"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="@dimen/base45dp"
        android:background="@drawable/sp_rect_coner_white"
        android:paddingBottom="@dimen/base10dp"
        android:paddingLeft="@dimen/base30dp"
        android:paddingRight="@dimen/base30dp"
        android:paddingTop="@dimen/base10dp"
        android:text="注册/登陆"
        android:textColor="@color/red"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="@dimen/base45dp"
        android:background="@drawable/bg_rounded_rectangle_line_white"
        android:paddingBottom="@dimen/base10dp"
        android:paddingLeft="@dimen/base30dp"
        android:paddingRight="@dimen/base30dp"
        android:paddingTop="@dimen/base10dp"
        android:text="马上体验"
        android:textColor="@color/white"
        android:visibility="invisible" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp">

        <LinearLayout
            android:id="@+id/ll_container"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_red_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shape_point_gray" />
    </RelativeLayout>
</RelativeLayout>