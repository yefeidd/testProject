<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_gift"
    android:layout_width="@dimen/base75dp"
    android:layout_height="@dimen/base95dp"
    android:gravity="center"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_gift_img"
        android:layout_width="@dimen/base40dp"
        android:layout_height="@dimen/base40dp"
        android:src="@mipmap/ic_default_avatars"
        />

    <TextView
        android:id="@+id/iv_gift_name"
        android:layout_marginTop="@dimen/base8dp"
        style="@style/Txt12Black"
        android:text="苹果"/>

    <TextView
        android:id="@+id/iv_gift_wealth"
        style="@style/Txt12Black"
        android:layout_marginTop="@dimen/base4dp"
        android:text="1个财富币"/>
</LinearLayout>