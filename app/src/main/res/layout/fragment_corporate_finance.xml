<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/base20dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/base10dp"
        android:paddingTop="12dp">

        <TextView
            style="@style/Txt14Grey"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/corporate_finance" />

        <TextView
            android:id="@+id/tv_date"
            style="@style/Txt14Grey"
            android:layout_width="wrap_content"
             />
    </LinearLayout>

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:columnCount="2"
        app:rowCount="11">
        <!-- 利润表 -->
        <TextView
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="0"
            app:layout_rowSpan="4"
            android:background="@drawable/sp_rect_grey_border"
            android:gravity="center"
            android:text="@string/income_sheet" />

        <LinearLayout
            app:layout_column="1"
            app:layout_columnWeight="2"
            app:layout_row="0"
            android:background="@drawable/border_top_bottom_right_line"
            android:orientation="horizontal">

            <TextView
                style="@style/Txt14Grey"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingBottom="@dimen/base8dp"
                android:paddingLeft="@dimen/base12dp"
                android:paddingTop="@dimen/base8dp"
                android:text="每股收益" />

            <TextView
                android:id="@+id/tv_basic_eps"
                style="@style/Txt14Grey"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:padding="@dimen/base8dp"
                 />
        </LinearLayout>

        <LinearLayout
            app:layout_column="1"
            app:layout_columnWeight="2"
            app:layout_row="1"
            android:background="@drawable/border_bottom_right_line"
            android:orientation="horizontal">

            <TextView
                style="@style/Txt14Grey"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_weight="1"
                android:paddingBottom="@dimen/base8dp"
                android:paddingLeft="@dimen/base12dp"
                android:paddingTop="@dimen/base8dp"
                android:text="营业收入" />

            <TextView
                android:id="@+id/tv_revenue"
                style="@style/Txt14Grey"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:padding="@dimen/base8dp"
                 />
        </LinearLayout>

        <LinearLayout
            app:layout_column="1"
            app:layout_columnWeight="2"
            app:layout_row="2"
            android:background="@drawable/border_bottom_right_line"
            android:orientation="horizontal">

            <TextView
                style="@style/Txt14Grey"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingBottom="@dimen/base8dp"
                android:paddingLeft="@dimen/base12dp"
                android:paddingTop="@dimen/base8dp"
                android:text="营业利润" />

            <TextView
                android:id="@+id/tv_oprate_profit"
                style="@style/Txt14Grey"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:padding="@dimen/base8dp"
                 />
        </LinearLayout>

        <LinearLayout
            app:layout_column="1"
            app:layout_columnWeight="2"
            app:layout_row="3"
            android:background="@drawable/border_bottom_right_line"
            android:orientation="horizontal">

            <TextView
                style="@style/Txt14Grey"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingBottom="@dimen/base8dp"
                android:paddingLeft="@dimen/base12dp"
                android:paddingTop="@dimen/base8dp"
                android:text="净利润" />

            <TextView
                android:id="@+id/tv_income"
                style="@style/Txt14Grey"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:padding="@dimen/base8dp"
                 />
        </LinearLayout>


        <!-- 资产负债表 -->
        <TextView
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="4"
            app:layout_rowSpan="4"
            android:background="@drawable/border_bottom_left_right_line"
            android:gravity="center"
            android:text="@string/balance_sheet" />

        <LinearLayout
            app:layout_column="1"
            app:layout_columnWeight="2"
            app:layout_row="4"
            android:background="@drawable/border_bottom_right_line"
            android:orientation="horizontal">

            <TextView
                style="@style/Txt14Grey"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingBottom="@dimen/base8dp"
                android:paddingLeft="@dimen/base12dp"
                android:paddingTop="@dimen/base8dp"
                android:text="@string/t_each_assets" />

            <TextView
                android:id="@+id/tv_t_each_assets"
                style="@style/Txt14Grey"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:padding="@dimen/base8dp"
                 />
        </LinearLayout>

        <LinearLayout
            app:layout_column="1"
            app:layout_columnWeight="2"
            app:layout_row="5"
            android:background="@drawable/border_bottom_right_line"
            android:orientation="horizontal">

            <TextView
                style="@style/Txt14Grey"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingBottom="@dimen/base8dp"
                android:paddingLeft="@dimen/base12dp"
                android:paddingTop="@dimen/base8dp"
                android:text="@string/t_assets" />

            <TextView
                android:id="@+id/tv_t_assets"
                style="@style/Txt14Grey"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:padding="@dimen/base8dp"
                 />
        </LinearLayout>

        <LinearLayout
            app:layout_column="1"
            app:layout_columnWeight="2"
            app:layout_row="6"
            android:background="@drawable/border_bottom_right_line"
            android:orientation="horizontal">

            <TextView
                style="@style/Txt14Grey"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingBottom="@dimen/base8dp"
                android:paddingLeft="@dimen/base12dp"
                android:paddingTop="@dimen/base8dp"
                android:text="@string/t_cl" />

            <TextView
                android:id="@+id/tv_t_cl"
                style="@style/Txt14Grey"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:padding="@dimen/base8dp"
                 />
        </LinearLayout>

        <LinearLayout
            app:layout_column="1"
            app:layout_columnWeight="2"
            app:layout_row="7"
            android:background="@drawable/border_bottom_right_line"
            android:orientation="horizontal">

            <TextView
                style="@style/Txt14Grey"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingBottom="@dimen/base8dp"
                android:paddingLeft="@dimen/base12dp"
                android:paddingTop="@dimen/base8dp"
                android:text="@string/t_sh_equity" />

            <TextView
                android:id="@+id/tv_t_sh_equity"
                style="@style/Txt14Grey"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:padding="@dimen/base8dp"
                 />
        </LinearLayout>


        <!-- 现金流量表 -->
        <TextView
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="8"
            app:layout_rowSpan="3"
            android:background="@drawable/border_bottom_left_right_line"
            android:gravity="center"
            android:text="@string/cash_flow_sheet" />

        <LinearLayout
            app:layout_column="1"
            app:layout_columnWeight="2"
            app:layout_row="8"
            android:background="@drawable/border_bottom_right_line"
            android:orientation="horizontal">

            <TextView
                style="@style/Txt14Grey"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingBottom="@dimen/base8dp"
                android:paddingLeft="@dimen/base12dp"
                android:paddingTop="@dimen/base8dp"
                android:text="@string/cf_operate" />

            <TextView
                android:id="@+id/tv_cf_operate"
                style="@style/Txt14Grey"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:padding="@dimen/base8dp"
                 />
        </LinearLayout>

        <LinearLayout
            app:layout_column="1"
            app:layout_columnWeight="2"
            app:layout_row="9"
            android:background="@drawable/border_bottom_right_line"
            android:orientation="horizontal">

            <TextView
                style="@style/Txt14Grey"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingBottom="@dimen/base8dp"
                android:paddingLeft="@dimen/base12dp"
                android:paddingTop="@dimen/base8dp"
                android:text="@string/cf_invest" />

            <TextView
                android:id="@+id/tv_cf_invest"
                style="@style/Txt14Grey"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:padding="@dimen/base8dp"
                 />
        </LinearLayout>

        <LinearLayout
            app:layout_column="1"
            app:layout_columnWeight="2"
            app:layout_row="10"
            android:background="@drawable/border_bottom_right_line"
            android:orientation="horizontal">

            <TextView
                style="@style/Txt14Grey"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingBottom="@dimen/base8dp"
                android:paddingLeft="@dimen/base12dp"
                android:paddingTop="@dimen/base8dp"
                android:text="@string/cf_finance" />

            <TextView
                android:id="@+id/tv_cf_finance"
                style="@style/Txt14Grey"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:padding="@dimen/base8dp"
                 />
        </LinearLayout>


    </android.support.v7.widget.GridLayout>
</LinearLayout>